<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/ET1_DIS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
           android:hint="@string/ET1_DIS" />

        <EditText
            android:id="@+id/ET2_DIS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/ET2_DIS" />

        <EditText
            android:id="@+id/ET3_DIS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/ET3_DIS" />

        <EditText
            android:id="@+id/ET4_DIS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/ET4_DIS" />

        <EditText
            android:id="@+id/ET5_DIS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/ET5_DIS"/>

        <Button
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:id="@+id/btn1_DIS"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/BTN_DIS" />

        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/btn2_DIS"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/BTN2_DIS" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>